<h2>Max Additions</h2>
<table>
  <thead>
    <tr>
      <th>Nationality</th>
      <th>Max Addition</th>
    </tr>
  </thead>
  <tbody>
    <% @nationality_report.parsed_max_addition.sort_by { |_, max_addition| max_addition }.each do |nationality, max_addition| %>
      <tr>
        <td><%= nationality %></td>
        <td><%= max_addition %></td>
      </tr>
    <% end %>
  </tbody>
</table>
